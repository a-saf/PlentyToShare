<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar_restaurant_detail"
        app:title="Order Details"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_orderid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_id"
        android:textSize="20sp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>

<!--    <com.google.android.material.textview.MaterialTextView-->
<!--        android:id="@+id/detail_username"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="75dp"-->
<!--        android:layout_marginEnd="75dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/detail_orderid"-->
<!--        android:textSize="20dp"-->
<!--        android:text="Username"-->
<!--        android:textColor="@color/black"/>-->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_servings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_orderid"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/servings"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_servings"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/date"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_expiry"
        android:text="@string/expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_date"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_status"
        android:text="@string/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_expiry"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_pickup"
        android:text="@string/pickup_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_status"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_type"
        android:text="@string/food_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_pickup"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#EA4033"
        android:drawableLeft="@drawable/ic_baseline_delete_24"
        android:drawableTint="@color/white"
        android:text="@string/button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_type"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>