<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_orderid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order ID"
        android:textSize="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"/>

<!--    <com.google.android.material.textview.MaterialTextView-->
<!--        android:id="@+id/detail_username"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="100dp"-->
<!--        android:layout_marginEnd="100dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/detail_orderid"-->
<!--        android:textSize="20dp"-->
<!--        android:text="Username"-->
<!--        android:textColor="@color/black"/>-->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_servings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_orderid"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Servings"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_servings"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Date"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_expiry"
        android:text="Expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_date"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_status"
        android:text="Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_expiry"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_pickup"
        android:text="Pickup Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_status"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_type"
        android:text="Food Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_pickup"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detail_delete_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_type"
        app:layout_constraintVertical_bias="0.837"
        app:backgroundTint="#cf003a"
        android:src="@drawable/ic_baseline_delete_24" />


</androidx.constraintlayout.widget.ConstraintLayout>